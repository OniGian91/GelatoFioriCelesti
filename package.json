{
  "name": "gelato-fiori-celesti",
  "version": "1.0.0",
  "description": "Calcolatore ricette per gelateria artigianale",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect=5858",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux"
  },
  "keywords": [
    "gelato",
    "gelateria",
    "ricette",
    "calcolatore"
  ],
  "author": "Fiori Celesti",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  },
  "build": {
    "appId": "com.fiorcelesti.gelato",
    "productName": "Gelato Fiori Celesti",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!node_modules/**/*",
      "!dist/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "imgs/icon.ico",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "dmg",
      "icon": "imgs/logo.jpg"
    },
    "linux": {
      "target": "AppImage",
      "icon": "imgs/logo.jpg"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.2.0"
  }
}
